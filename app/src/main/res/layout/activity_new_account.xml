<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.newAccount.NewAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/forced"
            android:layout_margin="@dimen/margin_20dp"
            android:id="@+id/info"
            android:fontFamily="@font/iransans"
            android:textSize="@dimen/textsize_18sp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/info"
            android:weightSum="1"
            android:layout_margin="@dimen/margin_5dp"
            android:id="@+id/linear_signup"
            android:layout_height="wrap_content">

            <View
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@color/gray_color"/>

            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:fontFamily="@font/iransans"
                android:text="@string/personal_info"
                android:layout_margin="@dimen/margin_20dp"
                android:textAlignment="center"
                android:textSize="@dimen/textsize_12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear_signup"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear_personal_info"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/l_fullname_id"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="@string/full_name"
                    android:drawableLeft="@drawable/ic_profile_black_24dp"
                    android:id="@+id/txt_fullname_new_acc_id"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/color_black"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_profile_black_24dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/l_national_code_id"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="@string/ational_code"
                    android:drawableLeft="@drawable/ic_code_black_24dp"
                    android:id="@+id/txt_national_code_new_acc_id"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/color_black"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_code_black_24dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/l_phone_id"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="@string/phone_number"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:id="@+id/txt_phone_new_acc_id"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/color_black"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_phone_android_black_24dp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/linear_personal_info"
            android:weightSum="1"
            android:layout_margin="@dimen/margin_5dp"
            android:id="@+id/linear_account"
            android:layout_height="wrap_content">

            <View
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@color/gray_color"/>

            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:fontFamily="@font/iransans"
                android:text="@string/account"
                android:layout_margin="@dimen/margin_20dp"
                android:textAlignment="center"
                android:textSize="@dimen/textsize_12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear_account"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear_account_info"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/l_user_id"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="@string/username"
                    android:drawableLeft="@drawable/ic_profile_black_24dp"
                    android:id="@+id/txt_username_new_acc_id"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/color_black"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_profile_black_24dp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_height="wrap_content">

                <Button
                    android:background="@drawable/button_background"
                    android:text="@string/user_test"
                    android:fontFamily="@font/iransans"
                    android:padding="@dimen/padding_5dp"
                    android:id="@+id/btn_test_user_id"
                    android:textSize="@dimen/textsize_12sp"
                    android:textColor="@color/fab_detaile_color"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <ProgressBar
                    android:layout_width="30dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/margin_50dp"
                    android:id="@+id/progress_test_username_id"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin_50dp" />

                <ImageView
                    android:id="@+id/image_test_username_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textAlignment="center"
                app:passwordToggleEnabled="true"
                android:id="@+id/l_pass_id"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="@string/password"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:id="@+id/txt_password_new_acc_id"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/color_black"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textAlignment="center"
                app:passwordToggleEnabled="true"
                android:id="@+id/l_repass_id"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="@string/re_password"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:id="@+id/txt_re_password_new_acc_id"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:inputType="textPassword"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/color_black"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_save_new_account_id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/linear_account_info"
            android:layout_margin="@dimen/margin_20dp"
            android:background="@drawable/button_background"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/iransans"
            android:textColor="@color/fab_detaile_color"
            android:textSize="@dimen/textsize_18sp" />

    </RelativeLayout>
</ScrollView>